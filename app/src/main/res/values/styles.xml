<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:dialogPreferenceStyle">@style/MyDialogTheme</item>
        <item name="colorAccent">@color/blueish</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dk_gray</item>
        <item name="android:dialogCornerRadius">15dp</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="FullscreenTheme" parent="MyTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">

    </style>


</resources>
